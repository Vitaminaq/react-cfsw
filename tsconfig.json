{
  "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "jsx": "react",
      "lib": ["dom", "es2017"],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "strict": true,
      "target": "esnext",
      "types": ["react"],
      "typeRoots": ["../types"],
      "paths": {
          "@src/*": ["./*"]
      }
  }
}